# True Love AI Configuration Example
# ============================================

# Base service address (用于发送通知)
base_server:
  host: "http://localhost:5000/send-text"

# HTTP service configuration
http:
  host: "0.0.0.0"
  port: 8088
  token: ["your_token"]

# Chat bot configuration
enable_bot: chatgpt
chatgpt:
  key1: "sk-xxx"
  key2: "sk-xxx"
  key3: "sk-xxx"
  claude_key1: "sk-ant-xxx"
  ds_key1: "sk-xxx"
  gpt4: []
  prompt: "You are a helpful assistant."
  prompt2: "You are a helpful assistant."
  prompt3: "You are a helpful assistant."
  prompt4: "You are a professional image prompt generator."
  prompt5: "You are a professional image type classifier."
  prompt6: "You are a professional image analyzer."

# Platform API keys
platform_key:
  sd: "sk-xxx"  # Stability AI API key

# GitHub integration
github:
  allow_user: []
  token: "github_pat_xxx"

# Logging configuration
logging:
  version: 1
  disable_existing_loggers: False
  formatters:
    simple:
      format: "%(asctime)s %(message)s"
      datefmt: "%Y-%m-%d %H:%M:%S"
    error:
      format: "%(asctime)s %(name)s %(levelname)s %(filename)s::%(funcName)s[%(lineno)d]:%(message)s"
  handlers:
    console:
      class: logging.StreamHandler
      level: INFO
      formatter: simple
      stream: ext://sys.stdout
    info_file_handler:
      class: logging.handlers.RotatingFileHandler
      level: INFO
      formatter: simple
      filename: logs/ai_info.log
      maxBytes: 10485760
      backupCount: 20
      encoding: utf8
    error_file_handler:
      class: logging.handlers.RotatingFileHandler
      level: ERROR
      formatter: error
      filename: logs/ai_error.log
      maxBytes: 10485760
      backupCount: 20
      encoding: utf8
  root:
    level: INFO
    handlers: [console, info_file_handler, error_file_handler]
